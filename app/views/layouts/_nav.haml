%nav.navbar.navbar-expand-md.navbar-dark.bg-dark
  .container-fluid
    %a.navbar-brand{:href => landing_path} Cobbl
  - if current_user.nil?
    - unless current_page?(register_path)
      %li.nav-item
        %button.btn.nav-link.text-primary{"data-bs-target" => "#ajax_popup", "data-bs-toggle" => "modal", :id => "", :onclick => "ajax_get_page('GET', '#{register_path}?yeild_only=true', 'ajax_content')"} Register
    - unless current_page?(login_path)
      %li.nav-item
        %button.btn.nav-link.text-primary{"data-bs-target" => "#ajax_popup", "data-bs-toggle" => "modal", :id => "", :onclick => "ajax_get_page('GET', '#{login_path}?yeild_only=true', 'ajax_content')"} Login
    = render 'layouts/ajax_popup'
  - else
    %li.nav-item
      %button.btn.nav-link.text-primary{:onclick => "window.location.href='#{user_path(current_user.id)}'"} Account
    %li.nav-item
      %button.btn.nav-link.text-primary{:onclick => "window.location.href='#{logout_path}'"} Logout
  = javascript_include_tag :ajax_get_page
